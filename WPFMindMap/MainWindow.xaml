<Window x:Class="WPFMindMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMindMap"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.ContextMenu>
        <ContextMenu Name="GridContextMenu">
            <MenuItem Name="EmptyAddNode" Header="Create new node" Click="EmptyAddNode_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Window.Resources>
        <ContextMenu x:Key="NodeContext">
            <MenuItem Name="EditNode" Header="Edit node"/>
            <MenuItem Name="AddChild" Header="Add child node"/>
        </ContextMenu>
    </Window.Resources>
    <Grid Name="MainGrid">
        <!--<Grid.ContextMenu>
            <ContextMenu Name="GridContextMenu">
                <MenuItem Name="EmptyAddNode" Header="Create new node" Click="EmptyAddNode_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>-->
    </Grid>
</Window>
